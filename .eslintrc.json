{
  "parser": "babel-eslint",

  "plugins": [
    "jest"
  ],

  "env": {
    "node": true,
    "es6": true
  },

  "globals": {
    "fetch": false
  },

  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "defaultParameters": true,
      "destructuring": true,
      "forOf": true,
      "generators": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralDuplicateProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "regexUFlag": true,
      "regexYFlag": true,
      "restParams": true,
      "spread": true,
      "superInFunctions": true,
      "templateStrings": true,
      "unicodeCodePointEscapes": true,
      "globalReturn": true
    },
    "sourceType": "module"
  },

  "extends": [
    "airbnb",
    "prettier",
    "plugin:jest/recommended"
  ],

  "rules": {
    "strict": 0,
    "arrow-parens": 0,
    "no-param-reassign": 0,
    "no-use-before-define": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
